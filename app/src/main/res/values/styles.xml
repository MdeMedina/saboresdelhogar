<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ========== ESTILOS DE TEXTO ========== -->

    <!-- Títulos -->
    <style name="TextAppearance.Chile.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Chile.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Chile.Headline3">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Subtítulos -->
    <style name="TextAppearance.Chile.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Chile.Subtitle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Cuerpo de texto -->
    <style name="TextAppearance.Chile.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.Chile.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Precios -->
    <style name="TextAppearance.Chile.Price">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/chile_red</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Chile.PriceSmall">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/chile_red</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- ========== ESTILOS DE BOTONES ========== -->

    <!-- Botón Primario (Rojo) -->
    <style name="Widget.Chile.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/chile_red</item>
        <item name="android:textColor">@color/chile_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Botón Secundario (Azul) -->
    <style name="Widget.Chile.Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/chile_blue</item>
        <item name="android:textColor">@color/chile_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Botón de Texto -->
    <style name="Widget.Chile.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/chile_red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- ========== ESTILOS DE INPUTS ========== -->

    <!-- TextInputLayout estilo chileno -->
    <style name="Widget.Chile.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/chile_red</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/chile_red</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <!-- EditText -->
    <style name="Widget.Chile.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- ========== ESTILOS DE CARDS ========== -->

    <!-- Card para productos -->
    <style name="Widget.Chile.Card.Product" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">0dp</item>
    </style>

    <!-- Card para información -->
    <style name="Widget.Chile.Card.Info" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- ========== TOOLBAR ========== -->

    <style name="Widget.Chile.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/chile_red</item>
        <item name="titleTextColor">@color/chile_white</item>
        <item name="subtitleTextColor">@color/chile_white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- ========== TABS ========== -->

    <style name="Widget.Chile.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/chile_red</item>
        <item name="tabIndicatorColor">@color/chile_red</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>

    <!-- ========== BOTTOM NAVIGATION ========== -->

    <style name="Widget.Chile.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/chile_red</item>
        <item name="itemTextColor">@color/chile_red</item>
        <item name="android:background">@color/chile_white</item>
    </style>

    <!-- ========== DIVISOR ========== -->

    <style name="Widget.Chile.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- ========== BADGES ========== -->

    <!-- Badge de categoría -->
    <style name="Widget.Chile.Badge.Category">
        <item name="android:background">@drawable/badge_background</item>
        <item name="android:textColor">@color/chile_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:paddingHorizontal">12dp</item>
    </style>

    <!-- ========== CHIP ========== -->

    <style name="Widget.Chile.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/neutral_100</item>
        <item name="chipStrokeColor">@color/chile_red</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="checkedIconTint">@color/chile_red</item>
    </style>

</resources>